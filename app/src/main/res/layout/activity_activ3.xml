<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:scrollbars="vertical"
    android:layout_height="match_parent"
    tools:context=".activ3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:padding="20dp"
            android:textSize="30dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:drawableLeft="@drawable/person"
            android:text="My profile" />


        <TextView
            android:id="@+id/suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"

            android:textSize="20dp"
            android:drawableLeft="@drawable/add_foreground"
            android:text="suggest your problem" />
        <TextView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"

            android:textSize="20dp"
            android:drawableLeft="@drawable/listprob"
            android:text="List of problem " />


        <TextView
            android:id="@+id/document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"

            android:textSize="20dp"
            android:drawableLeft="@drawable/document_foreground"
            android:text="documentations guideline " />
        <TextView
            android:id="@+id/proggramming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"

            android:textSize="20dp"
            android:drawableLeft="@drawable/proggraming_foreground"
            android:text="programming" />
    </LinearLayout>

</ScrollView>

