<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".profilestudent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/p"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/usernamest"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="20dp"
            android:text="username"
            android:textColor="@color/yallow"
            android:textSize="50dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/majorust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="major" />

    <TextView
        android:id="@+id/emailust"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/emailus"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="emailus" />
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/pp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/passwordust"
        android:layout_width="334dp"
        android:layout_height="wrap_content"

        android:drawableLeft="@drawable/passwordus"
        android:gravity="center|left"

        android:text="passwordus"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/uppass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/update_foreground" />
</LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="your posts"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="cursive"/>

    <ListView
        android:id="@+id/postst"
        android:layout_width="match_parent"
        android:layout_height="217dp" />
    <Button
        android:id="@+id/logout"
        android:layout_width="115dp"
        android:layout_height="62dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="#FF9800"
        android:fontFamily="cursive"
        android:text="logout"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>