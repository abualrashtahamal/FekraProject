<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".company">

    <TextView
        android:id="@+id/t"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Companies you can contact to inquire or ask for help " />
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="right|center"
            android:background="@drawable/border"
            android:drawableRight="@drawable/call_foreground"
            android:gravity="center|right"
            android:text="Vision company
"
            android:textSize="20dp" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/tow"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:background="@drawable/border"
                android:drawableRight="@drawable/call_foreground"
                android:gravity="center|right"
                android:text="Black magic company
"
                android:textSize="20dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="78dp"

            android:layout_gravity="right|center"
            android:background="@drawable/border"
            android:drawableRight="@drawable/call_foreground"
            android:gravity="center|right"
            android:text="Horse company
"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="right|center"
            android:background="@drawable/border"
            android:drawableRight="@drawable/call_foreground"
            android:gravity="center|right"

            android:text="you can company
"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
</LinearLayout>