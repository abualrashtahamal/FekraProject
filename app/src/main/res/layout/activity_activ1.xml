<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activ1">



<LinearLayout
    android:id="@+id/li"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pro"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:fontFamily="cursive"
            android:layout_gravity="center_vertical"
            android:text="my profile " />

</LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/suggestdoctor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/add_foreground" />

                                <TextView
                                    android:layout_width="176dp"
                                    android:layout_height="64dp"
                                    android:gravity="center"
                                    android:text="suggest your problem"
                                    android:textSize="20dp"

                                    android:textStyle="bold" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/listproblemdoc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/listprob" />

                                <TextView
                                    android:layout_width="149dp"
                                    android:layout_height="82dp"
                                    android:gravity="center"
                                    android:text="list of problems "
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/addpro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/project_foreground" />

                                <TextView
                                    android:layout_width="149dp"
                                    android:layout_height="82dp"
                                    android:gravity="center"
                                    android:text="add projects"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

        </GridLayout>

</LinearLayout>