<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".profiledoctor">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp"
        android:textColor="@color/yallow"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"
        android:text="username" />

    <TextView
        android:id="@+id/majorus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="major" />

    <TextView
        android:id="@+id/emailus"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/emailus"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="emailus" />

    <TextView
        android:id="@+id/passwordus"
        android:drawableLeft="@drawable/passwordus"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:textSize="20dp"

        android:layout_height="wrap_content"
        android:text="passwordus" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="your posts"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="cursive"/>

    <ListView
        android:id="@+id/posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>